{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es6",                          
    "module": "commonjs",                     
    "strict": true,                           
    "forceConsistentCasingInFileNames": true, 
    "rootDir": "./src",                        
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true            
  },
  "include": [
    "src/**/*"                                
  ],
  "exclude": [
    "node_modules",                            
    "**/*.test.ts"
  ]
}